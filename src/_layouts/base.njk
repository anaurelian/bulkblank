<!doctype html>
<html lang="en">
<head>
  {# Required meta tags #}
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

  {# SEO #}
  <title>{{ seoTitle or title }}</title>
  <meta name="description" content="{{ seoDescription }}">
  <link rel="canonical" href="{{ site.url }}{{ canonicalUrl or page.url }}">

  <meta name="theme-color" content="#000000">
  
  {# Tailwind Site CSS #}
  <link href="/css/output.css" rel="stylesheet">

  {# Icons, manifest, theme #}
  {# <link rel="shortcut icon" href="/favicon.ico"> #}
  {# <link rel="manifest" href="/site.webmanifest"> #}
  {# <meta name="theme-color" content="#000000"> #}

</head>
<body class="antialiased text-gray-600 bg-gray-100">

  <header class="bg-white p-4 text-gray-800 border-b-2">
    <p class="text-center text-4xl font-semibold">
      <a href="/">bulkblank</a>
    </p>
  </header>

  {{ content | safe }}

  <footer class="p-4 pt-0 text-center">
    <p>made by <a href="https://anaurelian.com/" target="_blank" class="bb-link">anaurelian</a> for the <a href="https://dusty.domains/" target="_blank" class="bb-link">dusty domains initiative</a></p>
  </footer>

  <script type="module" src="{{ script }}"></script>

